.wrapper__left
  .wrapper__left__user
    %p.wrapper__left__user__name
      = current_user.name
    %ul.wrapper__left__user__icon
      %li
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o.fa-lg
      %li
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog.fa-lg
  .wrapper__left__groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .wrapper__left__groups__group
          %p.wrapper__left__groups__group__name
            = group.name
          %p.wrapper__left__groups__group__comment
            = group.show_last_message
